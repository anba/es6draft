    <!-- Profile to run external test suites except for test262 -->
    <profile>
      <id>external</id>
      <properties>
        <test.excludes />
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>surefire-test</id>
                <configuration>
                  <testFailureIgnore>true</testFailureIgnore>
                  <includes>
                    <include>**/chakra/*.java</include>
                    <include>**/mozilla/*.java</include>
                    <include>**/v8/*.java</include>
                    <include>**/webkit/*.java</include>
                  </includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!-- Profile to run the test262 test suite -->
    <profile>
      <id>test262</id>
      <properties>
        <test.excludes />
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>surefire-test</id>
                <configuration>
                  <testFailureIgnore>true</testFailureIgnore>
                  <includes>
                    <include>**/test262/*.java</include>
                  </includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!-- Profile to run the test262 test suite on travis-ci -->
    <profile>
      <id>test262-travisci</id>
      <properties>
        <test.excludes />
        <!-- Explicit fork+memory settings to avoid exceeding the 3GB limit. -->
        <test.jvmArgs>-Xms256m -Xmx1536m</test.jvmArgs>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <executions>
              <execution>
                <id>surefire-test</id>
                <configuration>
                  <testFailureIgnore>true</testFailureIgnore>
                  <includes>
                    <include>**/test262/DescriptorTest.java</include>
                    <include>**/test262/Test262Web.java</include>
                    <include>**/test262/Test262Strict.java</include>
                  </includes>
                  <forkCount>1</forkCount>
                  <reuseForks>false</reuseForks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
